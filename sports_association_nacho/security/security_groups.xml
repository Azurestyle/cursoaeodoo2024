<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- manager and user groups -->
<record id="ir_module_sports_association" model="ir.module.category">
    <field name="name">Sports Association</field>
</record>


<record id="group_sports_association_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="ir_module_sports_association"/>
</record>

<record id="group_sports_association_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id" ref="ir_module_sports_association"/>
    <field name="implied_ids" eval="[(4, ref('group_sports_association_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_admin'))]"/>
</record>

<!-- rule for personal sports issues -->
<record id="sport_issue_rule" model="ir.rule">
    <field name="name">Sport Issue: User can only see personal issues</field>
    <field name="model_id" ref="model_sport_issue"/>
    <field name="domain_force">[('user_id', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('group_sports_association_user'))]"/>
</record>

<record id="sport_issue_global_rule" model="ir.rule">
    <field name="name">Sport Issue: All can only see personal issues</field>
    <field name="model_id" ref="model_sport_issue"/>
    <field name="domain_force">[(1, '=', 1)]</field>
    <field name="groups" eval="[(4, ref('group_sports_association_manager'))]"/>
</record>
</odoo>