<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Team">
                <field name="name" />
                <field name="sport_id" />
            </tree>
        </field>
    </record>

    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Mark players starters" name="action_make_all_starters" type="object" class="btn-success"/>
                    <button string="Mark players substitutes" name="action_make_all_substitutes" type="object" class="btn-danger"/>
                    <button string="Add free players" name="action_add_players" type="object" class="btn-warning"/>
                   
                </header>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                        
                    </div>
                    
                    <group>
                       
                        <field name="sport_id" />
                        <field name="player_count" />
                    </group>
                    
                
                        
                    <notebook>
                        <page name="players" string="Players">
                            <!-- <field name="player_ids" context="{'tree_view_ref':'sports_association_nacho.sport_player_view_simple_tree',
                                                               'form_view_ref':'sports_association_nacho.sport_player_view_simple_form'}">
                                                            </field> -->
                            <field name="player_ids" context="{'default':name}">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="age" />
                                    <field name="position" />
                                    <field name="starter" widget="boolean_toggle" />
                                    </tree>
                                </field>
                                
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport_team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by="sport_id">
                <field name="name"/>
                <field name="logo"/>
                <field name="player_count"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <!-- <ul class="oe_kanban_colorpicker" data-field="color"/> -->
                    </t>
                    <t t-name="kanban-box">
    
                    <div t-attf-class="oe_kanban_global_click oe_kanban_card d-flex flex-column">
                        <div class="oe_kanban_content flex-grow-1">
                            <div>
                                <field name="logo" widget="image" class="oe_avatar"/>
                            </div>
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                        </div>
                        <div class="o_kanban_record_subtitle">
                            <field name="player_count"/>
                        </div>
                        </div>
                        
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sport_team_action" model="ir.actions.act_window">
        <field name="name">Sport Team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport team
            </p>
        </field>
    </record>
</odoo>
